<% layout('/layouts/boilerplate') %>
    <div class="row mb-5">
        <div class="col-6 offset-3">
            <div class="card ">
                <img src="<%= campground.image %>" class="card-img-top" height=300rem">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Location: <%= campground.location %>
                    </li>
                    <li class="list-group-item">Price: $<%= campground.price %>
                    </li>
                </ul>
                <div class="card-body">
                    <form class="d-inline" action="/campground/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger btn-sm ">Delete</button>
                    </form>
                    <a class="btn btn-primary btn-sm" href="/campground">All Campgrounds</a>
                    <a class="btn btn-info btn-sm text-light" href="/campground/<%= campground._id %>/edit">Edit
                        Campground</a>
                </div>
            </div>
        </div>
    </div>